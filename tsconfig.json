{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "incremental": true
  },
  "exclude": ["**/node_modules"],
  "include": ["src/**/*"],
  "overrides": [
    {
      "files": "test/**/*.test.{ts,js}",
      "env": { "jest": true }
    }
  ]
}
